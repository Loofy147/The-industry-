{
  "name": "user_service",
  "description": "Manages user registration, authentication, and profile information.",
  "publishes": [
    {
      "event": "UserRegistered",
      "schema": "UserRegistered",
      "version": 1
    },
    {
      "event": "UserDeactivated",
      "schema": "UserDeactivated",
      "version": 1
    }
  ],
  "subscribes": [],
  "api": {
    "endpoints": [
      {
        "path": "/users",
        "method": "POST",
        "description": "Registers a new user."
      },
      {
        "path": "/users/:id",
        "method": "DELETE",
        "description": "Deactivates an existing user."
      }
    ]
  }
}
